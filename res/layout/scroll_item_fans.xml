<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fans_item_divider_height"
        android:background="@color/fans_item_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fans_item_height"
        android:layout_marginLeft="@dimen/fans_item_margin_h1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fans_portrait"
            android:layout_width="@dimen/fans_item_portrait_size"
            android:layout_height="@dimen/fans_item_portrait_size"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:contentDescription="@string/cd_portrait" />

        <TextView
            android:id="@+id/fans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fans_item_margin_h2"
            android:layout_gravity="center_vertical"
            android:textColor="@color/fans_item_text"
            android:textSize="@dimen/fans_item_text_size" />

    </LinearLayout>

</LinearLayout>
