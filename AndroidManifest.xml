<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.md4u.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_small"
        android:label="@string/app_name" >
        <activity
            android:name="LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppLogin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppMain" >
        </activity>
        <activity
            android:name="PostActivity"
            android:label="@string/main_post"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="BrowseActivity"
            android:label="@string/main_browse"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="ShareActivity"
            android:label="@string/main_share"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="BonusActivity"
            android:label="@string/main_bonus"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="AccountActivity"
            android:label="@string/main_account"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="FansActivity"
            android:label="@string/main_fans"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>

        <activity
            android:name="DecisionActivity"
            android:label="@string/browse_decision"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>
        <activity
            android:name="ResultActivity"
            android:label="@string/browse_result"
            android:screenOrientation="portrait"
            android:theme="@style/AppPage" >
        </activity>

        <service
            android:name="MDData"
            android:exported="false" >
        </service>
    </application>

</manifest>
